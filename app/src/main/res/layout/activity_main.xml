<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_row="0"
        android:background="@null"
        android:fontFamily="@font/cabin_condensed_regular"
        android:gravity="start"
        android:maxLength="16"
        android:padding="10dp"
        android:textColor="#424242"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textCursorDrawable="@drawable/cursor"/>
    <Button
        android:id="@+id/clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/calc_buttons"
        android:text="C"
        android:textColor="#424242"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:attr/borderlessButtonStyle" />
    <Button
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/backspace_button"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        style="?android:attr/borderlessButtonStyle" />
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="1"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="2"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="3"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="4"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="5"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="6"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/plus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="+"
            android:textColor="#1e88e5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="7"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="8"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="9"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="-"
            android:textColor="#1e88e5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="ร"
            android:textColor="#1e88e5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textColor="#424242"
            android:textSize="30sp" />
        <Button
            android:id="@+id/divide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="รท"
            android:textColor="#1e88e5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/point"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="."
            android:textColor="#1e88e5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/equals"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="="
            android:textColor="#1e88e5"
            android:textSize="30sp" />
        <Button
            android:id="@+id/leftParen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="("
            android:textColor="#ff6b6b"
            android:textSize="30sp" />
        <Button
            android:id="@+id/rightParen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text=")"
            android:textColor="#ff6b6b"
            android:textSize="30sp" />
        <Button
            android:id="@+id/inverse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="^"
            android:textColor="#ff6b6b"
            android:textSize="30sp" />
        <Button
            android:id="@+id/sqrt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:background="@drawable/calc_buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="โ"
            android:textColor="#ff6b6b"
            android:textSize="30sp" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>